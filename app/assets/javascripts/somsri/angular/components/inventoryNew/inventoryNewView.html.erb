<div class="container" >
  <div class="row">
    <div id="inventory">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-6 mb-20">
            <h1><h1>{{ "inventory_list" | translate }}</h1></h1>
          </div>
        </div>
        <div class="row">
          <ul class="nav nav-tabs main">
            <li class="cyan active">
              <a data-toggle="tab" class="ng-binding">{{ "inventory" | translate }}</a>
            </li>
          </ul>
        </div>
        <div class="row report-content container-fluid panel-board" style="height: 350px;">
          <div class="tab-content">
            <div class="row">
              <div class="col-md-3">
                <div class="form-group">
                  <label class="control-label" for="item_name">{{ "item_name" | translate }}</label>

                  <div class="col-md-12">
                    <input class="form-control" autocomplete="off" type="text id="inventory_name" ng-model="inventory.name">
                  </div>
                </div>
              </div>
              <div class="col-md-5">
                <div class="form-group">
                  <label class="control-label" for="serial_number">{{ "serial_number" | translate}} </label>
                  <div class="col-md-12">
                    <input class="form-control" autocomplete="off" type="text" id="inventory_serial_number" ng-model="inventory.serial_number">
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="model">{{ "model" | translate }}</label>
                  <div class="col-md-12">
                    <input class="form-control" autocomplete="off" type="text" id="inventory_model" ng-model="inventory.model">
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-20">
              <div class="col-md-8">
                <div class="form-group">
                  <label class="control-label" for="description">{{ "description" | translate }}</label>
                  <div class="col-md-12">
                    <input class="form-control" autocomplete="off" type="text" id="inventory_description" ng-model="inventory.description">
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="price">{{ "price" | translate }}</label>
                  <div class="col-md-12">
                    <input class="form-control" autocomplete="off" type="text" id="inventory_price" ng-model="inventory.price">
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-20">
              <div class="col-md-4">
                <div class="form-group ">
                  <label class="control-label" for="category">{{ "category" | translate }}</label>
                  <div class="col-md-12">
                    <select class="form-control" id="inventory_category" ng-model="inventory.category"><option value="">{{ "select_category" | translate }}</option>
                      <option value="1">1</option>
                      <option value="2">2</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <label class="control-label" for="date_purchase">{{ "date_purchase" | translate }}</label>
                  <div class="col-md-12">
                    <input class="form-control" data-provide="datepicker" type="date" id="inventory_date_purchase" ng-model="inventory.date_purchase">
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group ">
                  <label class="control-label" for="employee">{{ "employee" | translate }}</label>
                  <div class="col-md-12">
                    <div class="dropdown">
                      <h4 id="employlist-list" data-toggle="dropdown">
                        <span ng-bind="inventory.currentEmployeeString" ></span>
                            <i class="fa fa-angle-down" aria-hidden="true"></i>
                      </h4>
                      <ul class="dropdown-menu" aria-labelledby="employee-list">
                        <li ng-repeat="employee in inventory.employee_list">
                          <a class="blue-highlight" ng-click="inventory.switchEmployee(employee.name, employee.id)">
                            {{ employee.name | translate }}
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-menu row mt-20">
          <div class="pull-right text-right padding-left10">
            <button type="button" class="btn btn-custom btn-gray ng-binding" ng-click="inventory.cancel()">{{ "cancel" | translate }}</button>
          </div>
          <div class="pull-right text-right padding-left10">
            <button type="submit" class="btn btn-custom btn-green ng-binding" ng-click="inventory.save()">{{inventory.add_button | translate}}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


        