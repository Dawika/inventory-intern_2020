(function() {
  'use strict';
  angular.module('somsri.somsri.dashboard.service', [
  ])
  .service('vacationService', ['$http', function($http) {

    this.getVacations = function(is_me) {
      return $http.get('/vacations/dashboard', {
        params: {
          me: is_me
        }
      })
    }
    this.newVacation = function(data) {
      return $http.post('/vacations', data)
    }
    this.deleteVacation = function(id) {
      return $http.delete('/vacations/' + id)
    }
    this.getVacationConfigs = function() {
      return $http.get('/vacation_configs')
    }
  }]);
})();
