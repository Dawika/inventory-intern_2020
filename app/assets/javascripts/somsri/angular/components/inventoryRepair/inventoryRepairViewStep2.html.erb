<div class="container" >
	<div class="row">
		<div id="inventory">
			<div class="col-xs-12">
				<div class="row">
					<div class="col-xs-6 mb-20 pl-0">
						<h1>{{ "detal_repair" | translate }}</h1>
					</div>
				</div>
				<form ng-submit="inventory.save()">
					<button type="submit" class="submit" style="display: none;"></button>
					<div class="row report-content container-fluid panel-board">
						<div class="tab-content">
							<div class="row">
								<div class="col-md-3">
									<div class="form-group">
										<label class="control-label" for="employee_name">{{"employee_name" | translate}}</label>
										<div class="col-md-12">
											<input class="form-control" autocomplete="off" type="text" id="employee_name" ng-model="inventory.employee_name" required="true">
										</div>
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label class="control-label" for="item_name">{{"item_name" | translate}}</label>
										<div class="col-md-12">
											<input class="form-control" autocomplete="off" type="text" id="item_name" ng-model="inventory.item_name" required="true">
										</div>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<label class="control-label" for="serial_number">{{"serial_number" | translate}}</label>
										<div class="col-md-12">
											<input class="form-control" autocomplete="off" type="text" id="inventory_serial_number" ng-model="inventory.serial_number" required="true">
										</div>
									</div>
								</div>
							</div>
							<div class="row mt-20">
								<div class="col-md-6">
									<div class="form-group">
										<label class="control-label" for="reason">{{"reason" | translate}}</label>
										<div class="col-md-12">
											<input class="form-control" autocomplete="off" type="text" id="reason" ng-model="inventory.reason" required="true">
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
				<div class="row mt-20">
						<div class="report-content container-fluid panel-board">
							<ul class="step d-flex flex-nowrap">
								<li class="step-item">
									<a href="#!" class="">
										<i class="fa fa-check fa-2x icon-in-step-repair1 {{ currentLang }}"></i>
										<!-- <h3 class="text-in-step mt-0">1</h3>  -->
										{{ "confirm_accept" | translate }}
									</a>
								</li>
								<li class="step-item active">
									<a href="#!" class="">
										<!-- <i class="fa fa-check fa-2x icon-in-step-repair1 {{ currentLang }}"></i> -->
										 <h3 class="text-in-step-repair2 mt-0 {{ currentLang }}">2</h3>
										{{ "sent_repair" | translate }}
									</a>
								</li>
								<li class="step-item">
									<a href="#!" class="">
										<!-- <i class="fa fa-check fa-2x icon-in-step2"></i> -->
										<h3 class="text-in-step-repair3 mt-0 {{ currentLang }}">3</h3>
										{{ "repairs_completed" | translate }}
									</a>
								</li>
								<li class="step-item ">
									<a href="#!" class="">
										<!-- <i class="fa fa-check fa-2x icon-in-step"></i>  -->
										<h3 class="text-in-step4 mt-0 {{ currentLang }}">4</h3>
										{{ "dispatch_to_employees" | translate }}    
									</a>
								</li>
							</ul> 
							<form ng-submit="inventory.continue()">
								<div class="row mt-50">
									<div class="col-md-3">
										<div class="form-group">
											<label class="control-label" for="date">วันที่ส่งซ่อม</label>
											<p class="input-group">
												<input id="date" type="text" class="form-control numberic" uib-datepicker-popup="dd/MM/yyyy" ng-model="inventory.repair_date" is-open="inventory.repairDatePopup.opened" close-text="Close" required="true"/>
												<span class="input-group-btn">
													<button type="button" class="btn btn-default" ng-click="inventory.openRepairDatePopup()"><i class="fa fa-calendar"></i></button>
												</span>
											</p>
										</div>
									</div>
									<div class="col-md-3">
										<div class="form-group">
											<label class="control-label" for="supplier_name">ชื่อร้านที่ส่งซ่อม</label>
											<div class="col-md-12">
												<input class="form-control" autocomplete="off" type="text" id="supplier_name" ng-model="inventory.supplier_name" required="true">
											</div>
										</div>
									</div>
									<div class="col-md-3">
										<div class="form-group">
											<label class="control-label" for="date">วันที่นัดรับ</label>
											<p class="input-group">
												<input id="date" type="text" class="form-control numberic" uib-datepicker-popup="dd/MM/yyyy" ng-model="inventory.appointment_date" is-open="inventory.appointmenttDatePopup.opened" close-text="Close" required="true"/>
												<span class="input-group-btn">
													<button type="button" class="btn btn-default" ng-click="inventory.openAppointmentDatePopup()"><i class="fa fa-calendar"></i></button>
												</span>
											</p>
										</div>
									</div>
								</div>
								<div class="row mt-20">
									<div class="col-md-2">
										<button type="submit" class="btn btn-custom btn-continue ng-binding btn-block padding-left10">{{ "continue" | translate }}</button>
									</div>
									<div class="col-md-2 pl-0">
										<button type="button" class="btn btn-custom btn-gray ng-binding btn-block  padding-left10" ng-click="inventory.cancel()">{{ "cancel" | translate }}</button>
									</div>
								</div>									
							</form>
							<div class="row mt-20">
								<p class="pl-20" style="color: #B6B6B6;" >{{ "request_approval" | translate }} ({{ "save_by" | translate }} {{ inventory.save_by }})  </p>
							</div>
						</div>
					</div>
				<div class="footer-menu row mt-20">
					<div class="pull-right text-right padding-left10">
						<button type="button" class="btn btn-custom btn-gray ng-binding" ng-click="inventory.backToRootView()">{{ "cancel" | translate }}</button>
					</div>
					<div class="pull-right text-right padding-left10">
						<button type="button" class="btn btn-custom btn-blue ng-binding" onclick="$('.submit').trigger('click')">{{ "save" | translate }}</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>