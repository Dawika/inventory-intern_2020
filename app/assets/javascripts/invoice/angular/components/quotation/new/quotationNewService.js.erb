(function () {
  'use strict';

  angular
    .module('somsri.invoice.quotation_new.service', [])
    .service('quotationNewService', quotationNewService);

  quotationNewService.$inject = ['$http'];

  function quotationNewService($http) {
    var service = {
      get: get,
      create: create,
      remove: remove,
      getData: getData,
      getBank: getBank,
      createBank: createBank,
      getStudentInfo: getStudentInfo
    };

    function get(id) {
      return $http.get('/quotations/' + id);
    }

    function getStudentInfo(id) {
      return $http.post('/invoices/studentinfo/', {invoice: id});
    }

    function create(params) {
      return $http.post('/quotations/create_bill', params);
    }

    function remove(id) {
      return $http.delete('/quotations/' + id);
    }

    function getData() {
      return $http.get('/invoices/new');
    }

    function getBank() {
      return $http.get('/banks');
    }

    function createBank(params) {
      return $http.post('/banks', { params: params });
    }

    return service;
  }
}());