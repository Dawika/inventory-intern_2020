(function() {
  'use strict';

  angular.module('somsri.ng.key.enter', []).directive('ngKeyEnter', function() {
    return function(scope, element, attrs) {
      element.bind("keydown keypress", function(event) {
        if(event.which === 13) {
          scope.$apply(attrs.ngKeyEnter);
          event.preventDefault();
        }
      });
    };
  });
})();
