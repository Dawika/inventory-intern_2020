(function() {
  'use strict';
  angular.module('somsri.invoice.invoice_report.service', [
  ])
  .service('invoiceReportService', ['$http', function($http) {
    this.getInvoices = function(grade_name, searchKeyword, page, sort, order) {
      return $http.get('/invoices', { params: {
        grade_select: grade_name,
        page: page,
        search_keyword: searchKeyword,
        sort: sort,
        order: order
      }})
    }

    this.cancelInvoice = function(id) {
      return $http.patch('/invoices/' + id + '/cancel')
    }

    this.getGrades = function() {
      return $http.get('/grades')
    }
  }]);
})();
