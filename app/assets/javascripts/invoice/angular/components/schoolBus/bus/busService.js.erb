(function() {
  'use strict';

  angular.module('somsri.main.bus.service', [
  ])
  .service('busService', ['$http', function($http) {

  this.getEmployee = function(){
    return $http.get('buses/get_employee')
  }

  this.create = function(data){
    return $http.post('buses',  {bus: data})
  }

  this.getBusInfo = function(id){
    return $http.get('buses/' + id +'/edit')
  }

  this.update = function(id, data){
    return $http.patch('buses/' + id + '/', {bus: data})
  }

  this.delete = function(id){
    return $http.delete('buses/' + id)
  }


  }]);
})();
