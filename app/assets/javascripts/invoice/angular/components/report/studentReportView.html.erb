<div class="container-fluid">
  <div id="student-report" class="row ng-scope">
    <div class="row head-menu">
      <div class="col-md-6">
        <div class="col-xs-2" style="margin-right:-20px;">
          <h3>ระดับชั้น</h3>
        </div>
        <div class="col-xs-9">
          <div class="dropdown">
            <h4 id="grade-list" data-toggle="dropdown">
              <span ng-bind="studentReport.currentGradeString"></span>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </h4>
            <ul class="dropdown-menu" aria-labelledby="grade-list">
              <li ng-repeat="grade in studentReport.grades">
                <a ng-click="studentReport.switchGrade(grade.name)">
                  <button>{{ grade.name }}</button>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <button class="btn btn-export pull-right" type="button" ng-csv="studentReport.getExportData()" csv-header="studentReport.exportHeader" filename="{{studentReport.exportFileName}}">
          <i class="fa fa-external-link" aria-hidden="true"></i> Export
        </button>
      </div>
    </div>
    <div class="unused_for_print col-md-12">
      <div class="row report-content container-fluid">
        <div class="row">
          <div class="col-md-12 dropdown-filter">
            <div class="dropdown pull-right">
              <h4 id="year-list" data-toggle="dropdown">
                <strong>ปีการศึกษา</strong> <span ng-bind="studentReport.currentYearString" ></span>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </h4>
              <ul class="dropdown-menu" aria-labelledby="year-list">
                <li ng-repeat="year in studentReport.years">
                  <a ng-click="studentReport.switchYear(year)">
                    <button>{{ year }}</button>
                  </a>
                </li>
              </ul>
            </div>
            <div class="dropdown pull-right" style="margin-right: 20px;">
              <h4 id="semester-list" data-toggle="dropdown">
              <strong>ภาคการเรียน</strong> <span ng-bind="studentReport.currentSemesterString" ></span>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </h4>
              <ul class="dropdown-menu" aria-labelledby="semester-list">
                <li ng-repeat="semester in studentReport.semesters">
                  <a ng-click="studentReport.switchSemester(semester)">
                    <button>{{ semester }}</button>
                  </a>
                </li>
                <li>
                  <a ng-click="studentReport.switchSemester('อื่นๆ')">
                    <button>ไม่ระบุภาคการเรียน</button>
                  </a>
                </li>
              </ul>
            </div>
            <div class="dropdown pull-right" style="margin-right: 20px;">
              <h4 id="semester-list" data-toggle="dropdown">
                <strong>สถานะการชำระ</strong> <span ng-bind="studentReport.invoiceFilterString" ></span>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
              </h4>
              <ul class="dropdown-menu" aria-labelledby="semester-list">
                <li ng-repeat="status in studentReport.invoiceFilter">
                  <a ng-click="studentReport.invoiceStatusFilter(status)">
                    <button>{{ status.text }}</button>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <table id="tableHeader" class="table scrollable-header">
          <thead>
           <tr>
              <th>รหัส</th>
              <th>ชื่อ</th>
              <th>ชั้น</th>
              <th>ห้อง</th>
              <th>เลขที่</th>
              <th>ผู้ปกครอง</th>
              <th>สถานะ</th>
              <th>ชำระโดย</th>
              <th class='text-currency'>ค่าธรรมเนียมการศึกษา</th>
              <th class='text-currency'>ค่าใช้จ่ายอื่นๆ</th>
              <th class='text-currency bold'>ยอดชำระ</th>
              <th>วันที่ชำระ</th>
           </tr>
          </thead>
            <tbody>
              <tr ng-repeat="student in studentReport.students ">
                <td class="text-left numberic">{{student.student_number}}</td>
                <td class="text-left">
                  <div ng-if="student.deleted_at && student.deleted_at != ''">
                    {{student.full_name_with_title}}
                  </div>
                  <div ng-if="!student.deleted_at">
                    <a href="/students/{{ student.id }}/edit">
                      <strong>{{student.full_name_with_title}}</strong>
                    </a>
                  </div>
                </td>
                <td>{{student.grade_name}}</td>
                <td>{{student.classroom}}</td>
                <td class="numberic">{{student.classroom_number}}</td>
                <td>{{student.parent_names}}</td>
                <td>{{student.active_invoice_status}}</td>
                <td>{{student.active_invoice_payment_method}}</td>
                <td class="text-currency numberic">{{student.active_invoice_tuition_fee.toFixed(2) | number:2}}</td>
                <td class="text-currency numberic">{{student.active_invoice_other_fee.toFixed(2) | number:2}}</td>
                <td class="text-currency bold numberic">{{student.active_invoice_total_amount.toFixed(2) | number:2}}</td>
                <td class="numberic">{{student.active_invoice_updated_at | date:'d/MM/yyyy hh:mm'}}</td>
              </tr>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="5"></td>
                <td colspan="3">รวมยอดชำระทั้งหมด(บาท) :</td>
                <td class="text-currency numberic">{{studentReport.total.tuition_fee.toFixed(2) | number:2}}</td>
                <td class="text-currency numberic">{{studentReport.total.other_fee.toFixed(2) | number:2}}</td>
                <td class="text-currency numberic">{{studentReport.total.amount.toFixed(2) | number:2}}</td>
                <td class=""></td>
              </tr>
            </tfoot>
          </table>
          <div class="row row-centered">
            <div class="col-centered">
              <ul uib-pagination ng-change="studentReport.pageChanged()" total-items="studentReport.totalItems" ng-model="studentReport.currentPage" max-size="studentReport.maxSize" class="pagination-md" boundary-links="true" num-pages="numPages"></ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
