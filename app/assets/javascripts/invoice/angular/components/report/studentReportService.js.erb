(function() {
  'use strict';
  angular.module('somsri.invoice.studentReport.service', [
  ])
  .service('studentReportService', ['$http', function($http) {
    this.getStudents = function(grade_name, page) {
      return $http.get('/students', { params: { grade_select: grade_name, page: page , student_report: true } })
    }

    this.getInvoiceTotalAmount = function(grade_name) {
      return $http.get('/invoice_total_amount', { params: { grade_select: grade_name } })
    }

    this.getGrades = function() {
      return $http.get('/grades')
    }
  }]);
})();
