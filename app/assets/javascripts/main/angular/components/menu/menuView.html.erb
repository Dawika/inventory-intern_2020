<div class="container main-menu main">
    <div class="row justify-content-center">
        <div class="col-xs-3">
            <div class="menu-btn create-payment" ng-click="manageLineItem()">
                <div class="wraptocenter">
                    <%= image_tag 'line_item.png', class: "menu_line_item" %>
                </div>
            </div>
            <p>{{ 'manage_line_item' | translate }}</p>
        </div>
        <div class="col-xs-3">
            <div class="menu-btn create-payment" ng-click="openSchoolProfile()">
                <div class="wraptocenter">
                    <%= image_tag 'blue-school.png', class: "" %>
                </div>
            </div>
            <p>{{ 'school_profile' | translate }}</p>
        </div>
        <div class="col-xs-3">
            <div class="menu-btn create-payment" ng-click="openClassroomList()">
                <div class="wraptocenter">
                    <%= image_tag 'add_class_setting.png', class: "" %>
                </div>
            </div>
            <p>{{ 'class_management' | translate }}</p>
        </div>
        <div class="col-xs-3" ng-show="menu.enable_expenses">
            <div class="menu-btn create-payment" ng-click="openExpensesSetting()">
                <div class="wraptocenter">
                    <%= image_tag 'logo_setting.png', class: "" %>
                </div>
            </div>
            <p>{{ 'expenses_category_setting' | translate }}</p>
        </div>
    </div>
</div>