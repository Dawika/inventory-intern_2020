(function() {
    'use strict';

    angular.module('somsri.main.password_modal.service', [])
        .service('passwordModalService', ['$http', '$log', function($http, $log) {
            return {
                changePassword: function(data) {
                    return $http.patch('/settings/update_password', data);
                },
                get_old_password: function(password) {
                    return $http.get('/users/get_password?password=' + password)
                }
            };
        }]);
})();