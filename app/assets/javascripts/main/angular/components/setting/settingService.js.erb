(function() {
  'use strict';

  angular.module('somsri.main.setting.service', [
  ])
  .service('settingService', ['$http', function($http) {
    this.getSetting = function() {
      return $http.get('/settings');
    };

    this.saveSetting = function(params) {
      return $http.patch('/settings/', params);
    };

    this.getSiteConfig = function() {
      return $http.get('/users/site_config');
    };

    this.getRole = function() {
      return $http.get('/users/me')
    }

    this.getRoleEmployee = function(id) {
      return $http.get('users/role_employees', {
        params: {
          id: id
        }
      })
    }

  }]);
})();
