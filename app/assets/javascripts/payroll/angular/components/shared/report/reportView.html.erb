<div class="row report-content">
  <div ng-repeat="employees in report.employees | filterEmployeesReport: class">
    <table id="tableHeader" class="table text-right scrollable-header">
      <thead>
       <tr>
          <th class="report_for_print_hide" style="width:48px;">รหัส</th>
          <th class="forprint-h_table print_name" style="width:461px;">ชื่อ</th>
          <th class="text-center forprint-h_table" style="width:184px;">เลขบัญชี</th>
          <th class="text-center report_for_print_hide" style="width:130px;">เงินเดือน</th>
          <th class="text-center report_for_print_hide" style="width:117px;">เงินเพิ่ม</th>
          <th class="text-center report_for_print_hide" style="width:92px;">เงินหัก</th>
          <th class="text-center forprint-h_table" style="width:122px;">เงินเดือนสุทธิ</th>
          <th class="text-right">
            <a ng-click="report.printSlips()" href="javascript:void(0)">
              <i class="fa fa-print"></i>
            </a>
          </th>
       </tr>
      </thead>
    </table>
    <div class="scrollable-content" style="max-height: calc(100vh - 270px);">
      <table id="tableData" class="table text-right">
        <tbody>
          <tr ng-repeat="employee in employees">
            <td class="text-left report_for_print_hide">{{employee.code}}</td>
            <td class="text-left forprint_table this_name">
              <a href="/somsri_payroll#/employees/{{employee.code}}?payroll_id={{employee.payroll_id}}">
                <strong>{{employee.name}}</strong>
              </a>
            </td>
            <td class="text-center forprint_table this_account">{{employee.account_number}}</td>
            <td class="report_for_print_hide">{{employee.salary | currency: ""}}</td>
            <td class="text-green report_for_print_hide">{{employee.extra_pay | currency: ""}}</td>
            <td class="text-red report_for_print_hide">{{employee.extra_fee | currency: ""}}</td>
            <td class="text-green forprint_table this_netsalary">{{report.getNetSalary(employee) | currency: ""}}</td>
            <td class="report_for_print_hide">
              <a ng-click="report.printSlip(employee.code, report.payroll_id)" href="javascript:void(0)">
                <i class="fa fa-print"></i>
              </a>
            </td>
          </tr>
        </tbody>
        <tfoot ng-show="$last">
          <tr>
            <td></td>
            <td class="report_for_print_hide"></td>
            <td class="text-center forprint-h_table">รวมทั้งหมด</td>
            <td class="report_for_print_hide">{{report.total.salary | currency: ""}}</td>
            <td class="text-green report_for_print_hide">{{report.total.extraPay | currency: ""}}</td>
            <td class="text-red report_for_print_hide">{{report.total.extraFee | currency: ""}}</td>
            <td class="text-green">{{report.total.netSalary | currency: ""}}</td>
            <td class="report_for_print_hide"></td>
          </tr>
        </tfoot>
      </table>
    </div>
    <div class="pagebreak"></div>
  </div>
</div>
