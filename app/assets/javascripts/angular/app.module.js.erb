(function() {
  'use strict';
  var app = angular.module('somsri.payroll', [
    'somsri.payroll.assets',
    'oc.lazyLoad',
    'ui.router.stateHelper',
    'ui.bootstrap',
    'somsri.payroll.main',
    'ngMaterial',
    'angularMoment',
    'somsri.payroll.filters',
    'xeditable',
    'somsri.payroll.slip.directive',
  ]);

  app.config(['stateHelperProvider', 'ASSETS', '$urlRouterProvider', '$mdDateLocaleProvider', function(stateHelperProvider, ASSETS, $urlRouterProvider, $mdDateLocaleProvider) {
    $mdDateLocaleProvider.formatDate = function(date) {
      return moment(date).format('DD/MM/YYYY');
    };

    stateHelperProvider.
      state({
        url: '/',
        name: 'home',
        templateUrl: "<%= asset_path('angular/components/home/homeView.html') %>",
        controller: 'homeCtrl as home',
        resolve: {
          resources: ['$ocLazyLoad', function($ocLazyLoad) {
            return $ocLazyLoad.load([
              ASSETS.somsri.payroll.home
            ]);
          }]
        }
      }).
      state({
        url: '/employees',
        name: 'employees',
        templateUrl: "<%= asset_path('angular/components/employees/employeesView.html') %>",
        controller: 'employeesCtrl as employees',
        resolve: {
          resources: ['$ocLazyLoad', function($ocLazyLoad) {
            return $ocLazyLoad.load([
              ASSETS.somsri.payroll.employees
            ]);
          }]
        }
      }).
      state({
        url: '/employees/:id',
        name: 'employee_details',
        templateUrl: "<%= asset_path('angular/components/employees/employee/employeeDetailsView.html') %>",
        controller: 'employeeDetailsCtrl as employee',
        resolve: {
          resources: ['$ocLazyLoad', function($ocLazyLoad) {
            return $ocLazyLoad.load([
              ASSETS.somsri.payroll.employee_details
            ]);
          }]
        }
      }).
      state({
        url: '/report',
        name: 'report',
        templateUrl: "<%= asset_path('angular/components/report/reportView.html') %>",
        controller: 'reportCtrl as report',
        resolve: {
          resources: ['$ocLazyLoad', function($ocLazyLoad) {
            return $ocLazyLoad.load([
              ASSETS.somsri.payroll.report
            ]);
          }]
        }
      }).
      state({
        url: '/employees/:id/slip?month&year',
        name: 'slip',
        templateUrl: "<%= asset_path('angular/components/slip/slipView.html') %>",
        controller: 'slipCtrl as slip',
        resolve: {
          resources: ['$ocLazyLoad', function($ocLazyLoad) {
            return $ocLazyLoad.load([
              ASSETS.somsri.payroll.slip
            ]);
          }]
        }
      }).
      state({
        url: '/payroll',
        name: 'payroll',
        templateUrl: "<%= asset_path('angular/components/payroll/payrollView.html') %>",
        controller: 'payrollCtrl as payroll',
        resolve: {
          resources: ['$ocLazyLoad', function($ocLazyLoad) {
            return $ocLazyLoad.load([
              ASSETS.somsri.payroll.payroll
            ]);
          }]
        }
      })

    $urlRouterProvider.when("", "/");
  }]);

  app.run(['editableOptions', function(editableOptions) {
    editableOptions.theme = 'bs3';
    editableOptions.icon_set = "font-awesome"
  }]);
})();
