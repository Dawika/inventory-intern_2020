(function() {
  'use strict';
  angular.module('somsri.payroll.main', [
  ])
  .controller('mainCtrl', ['$rootScope', '$state', function($rootScope, $state) {
    $rootScope.openReport = function() {
      $state.go('report')
    };

    $rootScope.openEmployees = function () {
      $state.go('employees')
    };

    $rootScope.openEmployeeNew = function () {
      $state.go('employee_new');
    };

    $rootScope.openEmployeeDetails = function (id) {
      $state.go('employee_details',{ id: id });
    };

    $rootScope.openSlip = function (id) {
      $state.go('slip',{ id: id });
    };

  }]);
})();
