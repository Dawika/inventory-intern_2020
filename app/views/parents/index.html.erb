<%- model_class = Parent -%>
<%= render 'layouts/messages' %>
<div class="container-fluid">
  <div class="row head-sp">
    <div class="col-xs-2">
      <h1>ผู้ปกครอง</h1>
    </div>
    <div class="col-xs-2 col-xs-offset-8" style="text-align: right; margin-top: 10px;">
      <%= link_to t('.addparent', :default => t("helpers.links.addparent")),
                new_parent_path,
                :class => 'btn btn-add-ps float-right'%>
    </div>
  </div>
  <div class="content-student-parent" style="
    padding-left: 60px;
    padding-right: 60px;">
    <%= form_tag(parents_path, method: :get, id: "search-form") do %>
      <div class="form-group col-xs-4">
        <%= text_field_tag :search, params[:search], placeholder: "ค้นหา..." ,class: 'search-sp'%>
        <%= button_tag(type: 'submit', class: "btn btn-search-sp") do %>
          <i class="fa fa-search"></i>
        <% end %>
      </div>

      <div class="col-xs-4 col-xs-offset-4 form-group float-right-search">
        <tr>
          <td><label for="class_select">เลือกตามห้อง</label></td>
          <td>
            <select name="class_select" id="class_select"  onchange="this.form.submit()">
                <option value='all'>ทั้งหมด</option>
                <% @classroom_display.each do |classroom| %>
                  <% if  classroom != ""%>
                    <option value="<%= classroom %>"<%= @filter_grade.to_s == classroom.to_s ? "selected" : "" %>> <%= classroom %> </option>
                  <% else %>
                    <option value="<%= classroom %>"<%= @filter_grade.to_s == classroom.to_s ? "selected" : "" %>>ไม่ระบุห้อง</option>
                  <% end %>
                <% end %>
            </select>
          </td>
        </tr>
      </div>

    <% end %>

    <table class="table table-sp-report">
      <thead>
        <tr>
          <th style="width: 300px;">ชื่อ-สกุล</th>
          <th>โทรศัพท์</th>
          <th>อีเมล์</th>
          <th>ความสัมพันธ์</th>
          <th>ชื่อ-สกุลนักเรียน</th>
          <th>สถานะ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @parents.each do |parent| %>
          <% if parent.deleted_at == nil %>
          <tr>
            <td><%= parent.full_name %></td>
            <td><%= parent.mobile %></td>
            <td><%= parent.email %></td>
            <td><%= parent.relationships.first.nil? ? "" : t(parent.relationships.first.name) %></td>
            <td><%= student_link_with_full_name(parent.students.first) %></td>
            <td id="text-status"><%= parent.invoices.first.nil? ? "<span id='no-pay'>ยังไม่ได้ชำระเงิน</span>".html_safe : "<span id='this-pay'>ชำระเงินแล้ว</span>".html_safe %></td>
            <td>
                <%= link_to t('.show', :default => t("helpers.links.show")),
                            parent_path(parent), :class => 'btn btn-se' %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_parent_path(parent), :class => 'btn btn-se' %>
                <%= link_to "<i class='fa fa-archive'></i>".html_safe ,
                            parent_path(parent),
                            :id => "parent_archive" ,
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm.parent_archive", :default => 'Are you sure?')) },
                            :class => 'btn btn-archive-sp tooltips', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => 'ลบข้อมูลออกจากระบบ (สามารถนำกลับมาได้้)'  %>

                <span ng-show="<%=parent.invoices.first.nil?%>"><%= link_to "<i class='fa fa-trash'></i>".html_safe ,
                            parent_real_destroy_path(parent),
                            :id => 'parent_delete' ,
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm.parent_delete", :default => 'Are you sure?')) },
                            :class => 'btn btn-delete-sp tooltips', 'data-toggle' => 'tooltip', 'data-placement' => 'top', :title => 'ลบข้อมูลออกจากระบบ (ไม่สามารถนำกลับมาได้)'  %></span>
            </td>
          </tr>
          <% else %>
          <tr style="color: #dddbdb !important">
            <td><%= parent.full_name %></td>
            <td><%= parent.mobile %></td>
            <td><%= parent.email %></td>
            <td><%= parent.relationships.first.nil? ? "" : t(parent.relationships.first.name) %></td>
            <td><%= student_link_with_full_name(parent.students.first) %></td>
            <!-- <td id="text-status"><%= parent.invoices.first.nil? ? "<span id='no-pay'>ยังไม่ได้ชำระเงิน</span>".html_safe : "<span id='this-pay'>ชำระเงินแล้ว</span>".html_safe %></td> -->
            <td><%= parent.deleted_at.nil? ? "" : "ผู้ปกครองถูกนำออกจากระบบชั่วคราว" %></td>
            <td><%= link_to "นำกลับสู่ระบบ" ,
                    parent_restore_path(parent) ,
                    :id => 'parent_restore' ,
                    :method=> :post %>
            </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <div align="center"><%= will_paginate @parents %></div>
  </div>
</div>
