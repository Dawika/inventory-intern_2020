<%- model_class = Parent -%>
<%= javascript_include_tag 'custom_bootstrap_table' %>
<div id="parent-index">
  <div class="row head-sp">
    <div class="col-xs-6 mb-20">
      <h1><%= t('parent') %></h1>
    </div>
    <div class="col-xs-6 mt-10 px-0" style="text-align: right;">
      <a class="btn btn-custom btn-ligth-green float-right mr-5" href="#" onclick='toggleImportSection()'><i class="fa fa-upload" aria-hidden="true"></i> <%= t('import') %></a>
      <a class="btn btn-custom btn-blue-sky float-right mr-5" href="#" onclick='exportTable("parents")'><i class="fa fa-share" aria-hidden="true"></i> <%= t('export') %></a>
      <%= link_to t('.addparent', :default => t("helpers.links.addparent")), new_parent_path, :class => 'btn btn-custom btn-blue float-right'%>
    </div>
  </div>
    <div class="row" style="margin: 2px 20px 30px auto;" id="importSection" hidden>
      <div class="row">
        <div class="col-xs-7"></div>
        <div class="col-xs-5">
          <p>ท่านสามารถ Download ไฟล์ผู้ปกครองได้ <a href="./file_import/parents.xlsx" download>ที่นี่</a> เพื่อนำไปแก้ไขและ import เข้าสู่ระบบต่อไป</p>
        </div>
      </div><br>
      <div class="col-xs-9"></div>
      <div class="col-xs-3 text-right">
      <%= form_tag import_parents_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import", class: "btn btn-primary", style: 'margin-top: -15%;'%>
      <% end %>
    </div>
  </div>
  <div class="content-student-parent">
    <div class="row toolbar-student-parent">
      <div class="col-xs-6">
        <div class="search">
          <i class="fa fa-search" aria-hidden="true"></i>
          <input class="form-control" id="search" type="text" placeholder=<%= t('find') %> onchange="search()"
            onkeyup="this.onchange()">
        </div>
      </div>
      <div class="col-xs-6 select-filter">
        <span><%= t('select_classroom') %></span>
        <select name="grade_select" id="grade_select" class="btn-grades" onchange="filter(), getclassroom('/students')">
          <option value='all'><%= t('all') %></option>
          <% @Grade.all.each do |grade| %>
          <option value="<%= grade.name %>" <%= @filter_grade.to_s == grade.name.to_s ? "selected" : "" %>>
            <%= grade.name %> </option>
          <% end %>
        </select>

        <span><%= t('select_room') %></span>
        <select name="class_select" id="class_select" onchange="filter()" class="btn-grades">
          <option value='all'><%= t('all') %></option>
        </select>
      </div>
    </div>
    <div class="overflow-table">
      <table id="table" data-toggle="table" data-pagination="true" data-pagination-loop="false" data-url="/parents.json"
        data-side-pagination="server" data-sort-name="parents.full_name" data-sort-order="asc"
        data-query-params="queryParams" data-locale="<%= I18n.locale %>">
        <thead>
          <tr>
            <th data-field="parents.img_url" data-formatter="imgTag"></th>
            <th data-field="parents.full_name" data-formatter="linkToParentEditFormatter" data-sortable="true"
              style="width: 300px;"><%= t('full_name') %></th>
            <th data-field="parents.mobile" data-sortable="true"><%= t('phone') %></th>
            <th data-field="parents.email" data-sortable="true"><%= t('email') %></th>
            <th data-field="relationships.name" data-sortable="true"><%= t('relationship') %></th>
            <th data-field="students.full_name" data-sortable="true"><%= t('student_name') %></th>
            <th data-field="parent_options" data-formatter="selectionParentFormatter"></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>

<table id="tableForExport" data-toggle="table" data-side-pagination="server" data-tableexport-display="always"
  style="display: none;">
  <thead>
    <tr>
      <th data-field="parents.full_name" style="width: 300px;"><%= t('full_name') %></th>
      <th data-field="parents.mobile"><%= t('phone') %></th>
      <th data-field="parents.email"><%= t('email') %></th>
      <th data-field="relationships.name"><%= t('relationship') %></th>
      <th data-field="students.full_name"><%= t('student_name') %></th>
    </tr>
  </thead>
</table>

<!-- Modal -->
<div id="warningModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body" id="modal-body">
        <div class="row">
          <div class="col-md-12">
            <h4 class="modal-title" id="modal-title"></h4>
          </div>
        </div>
        <div class="space20"></div>
        <div class="space20"></div>
        <div class="space20"></div>
        <div class="row">
          <div class="col-md-3 pull-right">
            <button class="btn btn-custom btn-gray" data-dismiss="modal"><%= t('cancel') %></button>
          </div>
          <div class="col-md-3 pull-right">
            <%= form_tag("", id:"actionModalForm") do %>
            <a class="btn btn-custom btn-red submit"
              onclick="document.getElementById('actionModalForm').submit();"><%= t('ok') %></a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>