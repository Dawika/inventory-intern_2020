<!DOCTYPE html>
<html lang="<%= @locale %>">
    <head>
        <title><%= t('title') %></title>
        <%= csrf_meta_tags %>

        <%= favicon_link_tag 'apple-touch-icon-57x57.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '57x57' %>
        <%= favicon_link_tag 'apple-touch-icon-114x114.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '114x114' %>
        <%= favicon_link_tag 'apple-touch-icon-72x72.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '72x72' %>
        <%= favicon_link_tag 'apple-touch-icon-144x144.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '144x144' %>
        <%= favicon_link_tag 'apple-touch-icon-60x60.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '60x60' %>
        <%= favicon_link_tag 'apple-touch-icon-120x120.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '120x120' %>
        <%= favicon_link_tag 'apple-touch-icon-76x76.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '76x76' %>
        <%= favicon_link_tag 'apple-touch-icon-152x152.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '152x152' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '196x196' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '96x96' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '32x32' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '16x16' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '128x128' %>
        <%= favicon_link_tag 'favicon.ico' %>
        <meta name="application-name" content="&nbsp;"/>
        <meta name="msapplication-TileColor" content="#FFFFFF"/>
        <meta name="msapplication-TileImage" content="<%= image_path('mstile-144x144.png') %>"/>
        <meta name="msapplication-square70x70logo" content="<%= image_path('mstile-70x70.png') %>"/>
        <meta name="msapplication-square150x150logo" content="<%= image_path('mstile-150x150.png') %>"/>
        <meta name="msapplication-wide310x150logo" content="<%= image_path('mstile-310x150.png') %>"/>
        <meta name="msapplication-square310x310logo" content="<%= image_path('mstile-310x310.png') %>"/>

        <link href="https://fonts.googleapis.com/css?family=Maitree:400,700" rel="stylesheet">
        <%= stylesheet_link_tag 'application', media: 'all' %>
        <%= stylesheet_link_tag 'application_somsri', media: 'all' %>
        <%= javascript_include_tag 'application' %>
        <script src="//rawgit.com/hhurz/tableExport.jquery.plugin/master/tableExport.js"></script>
    </head>
    <% if !user_signed_in? %>
      <body ng-controller="mainCtrl as main">
    <% else %>
      <body ng-controller="mainCtrl as main" style="background:#fff !important;">
    <%end%>
    <% if !user_signed_in? %>
      <header style="display:none;">
    <% else %>
      <header>
    <% end %>
    <%= render 'layouts/navigation' %>
    </header>
    <div class="top-bar-space"></div>
      <%= render 'layouts/flash_message' %>
      <%= yield %>
    </body>
</html>
