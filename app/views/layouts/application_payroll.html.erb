<!DOCTYPE html>
<html ng-app="somsri.payroll">
    <head>
        <title>สมศรี - สวัสดีค่ะ</title>
        <%= csrf_meta_tags %>

        <%= favicon_link_tag 'apple-touch-icon-57x57.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '57x57' %>
        <%= favicon_link_tag 'apple-touch-icon-114x114.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '114x114' %>
        <%= favicon_link_tag 'apple-touch-icon-72x72.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '72x72' %>
        <%= favicon_link_tag 'apple-touch-icon-144x144.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '144x144' %>
        <%= favicon_link_tag 'apple-touch-icon-60x60.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '60x60' %>
        <%= favicon_link_tag 'apple-touch-icon-120x120.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '120x120' %>
        <%= favicon_link_tag 'apple-touch-icon-76x76.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '76x76' %>
        <%= favicon_link_tag 'apple-touch-icon-152x152.png', rel: 'apple-touch-icon-precomposed', type: 'image/png', size: '152x152' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '196x196' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '96x96' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '32x32' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '16x16' %>
        <%= favicon_link_tag 'favicon-196x196.png', rel: 'icon', type: 'image/png', size: '128x128' %>
        <%= favicon_link_tag 'favicon.ico' %>
        <meta name="application-name" content="&nbsp;"/>
        <meta name="msapplication-TileColor" content="#FFFFFF"/>
        <meta name="msapplication-TileImage" content="<%= image_path('mstile-144x144.png') %>"/>
        <meta name="msapplication-square70x70logo" content="<%= image_path('mstile-70x70.png') %>"/>
        <meta name="msapplication-square150x150logo" content="<%= image_path('mstile-150x150.png') %>"/>
        <meta name="msapplication-wide310x150logo" content="<%= image_path('mstile-310x150.png') %>"/>
        <meta name="msapplication-square310x310logo" content="<%= image_path('mstile-310x310.png') %>"/>

        <link href="https://fonts.googleapis.com/css?family=Maitree:400,700" rel="stylesheet">
        <%= stylesheet_link_tag    'application_payroll', media: 'all' %>
        <%= javascript_include_tag 'application_payroll' %>
    </head>

    <body ng-controller="mainCtrl as main">
        <nav class="navbar navbar-default navbar-fixed-top z-index-lv-1">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="logo text-center">
                        <a class="navbar-brand" href="/"><%= image_tag 'somsri_logo.png', class: "" %></a>
                    </div>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <% if current_user %>
                      <ul class="nav navbar-nav">
                        <li class="dropdown">
                          <button id="menu" ng-show="menu" class="dropdown-toggle text-navbar-left" data-toggle="dropdown">
                            <span ng-bind="menu">เงืนเดือน</span>
                            <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu nav-menu">
                            <%= render 'layouts/navigation_left_menu' %>
                          </ul>
                        </li>
                      </ul>
                        <ul class="nav navbar-nav navbar-right dropdown">
                          <% if user_signed_in? %>
                            <a class="nav-user avatar" href="javascript:void(0)" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <%= user_avatar(current_user.gravatar_url) %> <%= current_user.full_name.nil? ? current_user.email : current_user.full_name %>
                              <i class="fa fa-chevron-down"></i>
                            </a>
                            <!-- <a class="help-invoice" href="javascript:void(0)"><i class="fa fa-question"></i></a> -->
                            <div class="dropdown-menu on-nav-bar " aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="somsri_payroll#/setting"><i class="fa fa-cog"></i> Setting</a>
                                <br>
                                <a class="dropdown-item" href="<%= destroy_user_session_path %>" rel="nofollow" data-method="DELETE"><i class="fa fa-sign-out"></i> Sign Out</a>
                            </div>
                          <% else %>
                            <a class="nav-link" href="/"><i class="fa fa-sign-in"></i> Log In</a>
                          <% end %>
                        </ul>
                    <% end %>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
        <div class="top-bar-space"></div>
        <%= yield %>
    </body>
</html>
