<nav class="navbar navbar-fixed-top navbar-custom">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <div class="logo text-center">
          <a class="navbar-brand" href="/"><%= image_tag 'somsri_logo.png', class: "" %></a>
      </div>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if current_page?("/") %><ul class="nav navbar-nav" style="display:none;"><% else %><ul class="nav navbar-nav"><% end %>
        <li class="dropdown">
          <a id="menu" class="dropdown-toggle text-navbar-left" data-toggle="dropdown" href="">
            <span ng-show="menu" ng-bind="menu"></span>
            <span ng-hide="menu"><%= @menu %></span>
            <span class="fa fa-angle-down"></span>
          </a>
          <ul class="dropdown-menu nav-menu">
            <%= render 'layouts/menu', is_topbar: true %>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right dropdown" id="dropdownMenu" onclick="showDropdown(this.id)">
          <% if user_signed_in? %>
            <%= image_tag current_user.school.logo_url, width: 30  %>
            <a class="nav-user avatar" href="javascript:void(0)" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name.blank? ? current_user.email : current_user.name %>
              <i class="fa fa-angle-down"></i>
            </a>
            <div class="dropdown-menu on-nav-bar">
              <% if (SiteConfig.get_cache.enable_rollcall) && (Figaro.env.ROLLCALL_APK_URL) %>
                <li><a class="dropdown-item" href="<%= Figaro.env.ROLLCALL_APK_URL %>" target="_blank">
                <i class="fa fa-download"></i> Download Rollcall</a></li>
                <li class="divider"></li>
              <% end %>

              <li class="dropdown-submenu">
                <a tabindex="-1" class="cursor-pointer"><i class="fa fa-commenting-o"></i> Switch language</a>
                <ul class="dropdown-menu">
                  <li><a onclick="switch_language('th')" class="cursor-pointer"><img src="/switch_language/flag-thailand.png" alt="flag-thailand">&nbsp;&nbsp; ภาษาไทย</a></li>
                  <li class="divider"></li>
                  <li><a onclick="switch_language('en')" class="cursor-pointer"><img src="/switch_language/flag-united-kingdom.png" alt="flag-thailand">&nbsp;&nbsp; English</a></li>
                </ul>
              </li>
              <li class="divider"></li>
              <li><a class="dropdown-item" href="/main#/profile"><i class="fa fa-user" aria-hidden="true"></i></i> <%= t("profile")%></a></li>
              <li class="divider"></li>
              <% if current_user.has_role?(:admin) %>
                <li><a class="dropdown-item" href="/main#/setting"><i class="fa fa-cog"></i> <%= t("settings")%></a></li>
                <li class="divider"></li>
              <% end %>
              <li><a class="dropdown-item" href="<%= destroy_user_session_path(cancel_check_plan: true) %>" rel="nofollow" data-method="DELETE">
                <i class="fa fa-sign-out"></i> <%= t("sign_out")%></a></li>
            </div>
          <% else %>
  
            <li class="divider"></li>
            <li><a class="nav-link" href="/"><i class="fa fa-sign-in"></i> <%= t("log_in")%></a></li>
          <% end %>
        </ul>
    </div>
  </div>
</nav>
<script>
  function switch_language(language){
    window.location = "/language?locale=" + language + "&redirect=" + encodeURIComponent(window.location.href)
  }
</script>
