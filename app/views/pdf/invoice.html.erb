<% ["( "+I18n.t('original')+" )", "( "+I18n.t('copy')+" )"].each do |title| %>
<div class="container font-10">
  <div class="row">
    <div class="col-xs-2 text-slip1-school p-0">
      <%= @results[:header].html_safe if @results[:header] %>
      <%= wicked_pdf_image_tag @results[:logo] ,height: '100', width: '100'%>
    </div>
    <div class="col-xs-8 font-14"><br>
      <div class="row"><b><%= @results[:school][:display_name] %></b></div>
      <div class="row"><%= @results[:school][:address] %></div>
      <div class="row"><b><%=I18n.t('call') + '/' + I18n.t('faxx') + ':  '%></b><%= @results[:school][:phone]%> ,
        <%= @results[:school][:fax] %></div>
      <div class="row"><b><%=I18n.t('email') + ':  '%></b><%= @results[:school][:email] %></div>
        <div class="row"><b><%= @results[:school][:tax_id].present? ? I18n.t('account_number') + ':  ' : ''%></b><%= @results[:school][:tax_id] %><b>
        <%= @results[:school][:branch].present? ? '  '+I18n.t('branch') + ':  ' : '' %></b><%= @results[:school][:branch] %> 
      </div>
    </div>
    <div class="col-xs-2 font-9">
      <div class="row">
        <span><%= I18n.t('receipt_no') %> &nbsp;<%= @results[:slip_id] %>/<%= @results[:create_year] %></span>
      </div>
      <div class="row mt-10">
        <%= I18n.t('date1') %> <%= I18n.locale == :th ? @results[:thai_now_date] : @results[:eng_now_date] %>
      </div>
    </div>
  </div>
  <div class="row mt-10">
    <div class="col-xs-4">
      <div class="row"><span class="font-24"><%= I18n.t('payment_receipt') %></div>
      <div class="row"><%= title %></div>
    </div>
    <div class="col-xs-3 col-xs-offset-5">
      <div class="row font-14"><%= I18n.t('term')+' '+@results[:semester]+' '+I18n.t('school_year')%>
        <%= I18n.locale == :th ? @results[:school_year] : @results[:school_year_en] %></div>
    </div>
  </div>

  <div class="row mt-10">
    <div class="col-xs-4 font-14">
      <div class="row"><b><%= I18n.t('parent_name') %></b></div>
      <div class="row"><%= @results[:parent][:display_name] %></div>
    </div>
    <div class="col-xs-3 col-xs-offset-5 font-14">
      <div class="row"><b><%= I18n.t('student') %></b></div>
      <div class="row"><%= @results[:student][:display_name] %></div>
      <div class="row"><%= I18n.t('student_number') %> <%= @results[:student][:student_number] %></div>
      <div class="row"> <b><%= I18n.t('grade') %> </b> &nbsp;<%= @results[:grade_name] %></div>
    </div>
  </div>
  <div class="row mt-10"><%= I18n.t('this_detail') %></div>
  <div class="row font-14">
    <table class="w-100p col-xs-12">
      <thead>
        <tr>
          <th class="border-1 w-10p p-10 text-center"><%= I18n.t('item_no') %></th>
          <th class="border-1 w-70p p-10 text-center"><%= I18n.t('item_desc') %></th>
          <th class="border-1 w-10p p-10 text-center"><%= I18n.t('price') %></th>
          <th class="border-1 w-20p p-10 text-center"><%= I18n.t('amount') %></th>
          <th class="border-1 w-20p p-10 text-center"><%= I18n.t('total_amount') %></th>
        </tr>
      </thead>
      <tbody class="">
        <% if @results["line_items"] && @results["line_items"].length > 0 %>
        <% @results["line_items"].each_with_index do |line_item, i| %>
        <tr>
          <td class="border-left-1 border-right-1 p-10 text-center"><%= i + 1 %></th>
          <td class="border-left-1 border-right-1 p-10"><%= line_item[:detail] %></td>
          <td class="border-left-1 border-right-1 p-10 text-right"> 
            <%= number_with_precision(line_item[:amount], precision: 2, delimiter: ',') %>
          </td>
          <td class="border-left-1 border-right-1 p-10 text-center"><%= line_item[:item_amount] %></td>
          <td class="border-left-1 border-right-1 p-10 text-right"> 
            <%= number_with_precision(line_item[:amount]*line_item[:item_amount], precision: 2, delimiter: ',') %>
          </td>
        </tr>
        <% end %>
        <% end %>
        <% if @results["line_items"] && @results["line_items"].length < 10 %>
        <% (1..(10 - @results["line_items"].length)).each do |i| %>
        <tr>
          <td class="border-left-1 border-right-1 p-10">&nbsp;</td>
          <td class="border-left-1 border-right-1 p-10">&nbsp;</td>
          <td class="border-left-1 border-right-1 p-10">&nbsp;</td>
          <td class="border-left-1 border-right-1 p-10">&nbsp;</td>
          <td class="border-left-1 border-right-1 p-10">&nbsp;</td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td class="border-1 p-10"></td>
          <td class="border-1 p-10" colspan="3"><%= I18n.t('net') %> (<%=I18n.t('baht')%>) </td>
          <td class="border-1 p-10 text-right">
            <%= cleanNumber(number_with_precision(@results["total_amount"], precision: 2, delimiter: ',')) %></td>
        </tr>
        <tr>
          <td class="border-1 p-10"></td>
          <td class="border-1 p-10" colspan="4">
            <div class="row">
              <div class="col-xs-3">
                <span><%= I18n.t('net') %> </span>
              </div>
              <div class="col-xs-9 text-right">
                <b
                  class="total_text"><%= I18n.locale == :th ? thaiBaht(@results["total_amount"]) : NumbersInWords.in_words(roundNumber (@results["total_amount"])).titleize.concat(" Baht") %></b>
              </div>
            </div>
          </td>
        </tr>
      </tfoot>
    </table>
  </div>
  <div id="min-height-pay">
    <% if @results[:remark] %>
    <div class="sec-remart">
      <div class="row font-14">
        <b><%= I18n.t('remark') %></b> : <%= @results[:remark] %>
      </div>
    </div>
    <% end %>
    <% if @results[:school][:footer_invoice] %>
    <br>
    <div class="sec-remart">
      <div class="row font-14">
        <%= @results[:school][:footer_invoice].html_safe %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-xs-6 mt-50 ml-60p">
    <div class="row">
      <div class="col-xs-12">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= I18n.t('sign') %>...........................................................<%= I18n.t('receiver') %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2"> ( </div>
      <div class="col-xs-6 text-center"><%= @results[:receiver_name] %></div>
      <div class="col-xs-2"> )</div>
    </div>
  </div>
</div>
<div class="page-break"></div>
<% end %>