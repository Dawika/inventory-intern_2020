<div>
  <h3 class="pt-10"><%= I18n.t('expenses_payment_report') %></h3>
  <hr class="my-5">
  <% if (@start_date_time && @end_date_time) %>
    <% if Date.parse(@start_date_time.to_s) == Date.parse(@end_date_time.to_s) %>
      <label class="font-weight-normal mb-20"><%= I18n.t('this_date') + " " + I18n.l(@start_date_time, format: '%d/%m/%Y') %></label>
    <% else %>
      <label class="font-weight-normal mb-20"><%= I18n.t('from') + " " + I18n.l(@start_date_time, format: '%d/%m/%Y') + " " + I18n.t('to') + " " + I18n.l(@end_date_time, format: '%d/%m/%Y') %></label>
    <% end %>
  <% elsif (@start_date_time && !@end_date_time) %>
    <label class="font-weight-normal mb-20"><%= I18n.t('from_date') + " " + I18n.l(@start_date_time, format: '%d/%m/%Y') %></label>
  <% elsif (!@start_date_time && @end_date_time) %>
    <label class="font-weight-normal mb-20"><%= I18n.t('to_date') + " " + I18n.l(@end_date_time, format: '%d/%m/%Y') %></label>
  <% else %>
    <label class="font-weight-normal mb-20"><%= I18n.t('from_all') %></label>
  <% end %>
</div>
<table class="font-14 header-table-page">
  <thead class="bg-light-gray" display: table-row-group>
    <td class="border-1 p-5 w-90p text-left"><b><%= I18n.t('item') %></b></td>
    <td class="border-1 p-5 w-10p text-right"><b><%= I18n.t('amount') %></b></td>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td class="border-1 text-left p-5">
            <%= result[:payment_method] %>
        </td>
        <td class="border-1 text-right p-5">
          <%= number_with_precision(result[:total_cost], :precision => 2, :delimiter => ',') %>
        </td>
      </tr>
    <% end %>
    <tr class="h-20"></tr>
    <tr>
      <td class="text-right p-5 font-18"><b><%= I18n.t('total') %> :</b></td>
      <td class="text-right p-5 font-18"><b><%= number_with_precision(@total_cost, :precision => 2, :delimiter => ',') %></b></td>
    </tr>
  </tbody>
</table>
