<%- model_class = Student -%>
<div id="edit-student" class="container" style="width: 960px;">
  <div class="row head-sp justify-content-between">
    <h1>
      <span id="full-name-label"><%= @student.full_name_with_title %></span>
      <input id="search-by-name" class="typeahead" type="text" placeholder=<%= t('search_student') %>>
      <a onclick="toggleSearchInput()"><i class="fa fa-search" aria-hidden="true"></i></a>
    </h1>
  </div>
  <div class="space20"></div>
  <ul class="nav nav-tabs">
     <li class="active"><a class="tab-label" data-toggle="tab" href="#info"><%= t('student_info') %></a></li>
     <li><a class="tab-label" data-toggle="tab" href="#invoices"><%= t('receipts_info') %></a></li>
     <li><a class="tab-label" data-toggle="tab" href="#quotation"><%= t('quotation_info') %></a></li>
  </ul>
  <div class="tab-content">
    <div id="info" class="tab-pane fade in active">
      <%= render :partial => 'form' %>
    </div>
    <div id="invoices" class="tab-pane fade">
      <%= render :partial => 'invoices' %>
    </div>
     <div id="quotation" class="tab-pane fade">
      <%= render :partial => 'quotation' %>
    </div>
  </div>
</div>
<div id="for-test"></div>

<!-- Modal -->
<div id="warningModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body" id="modal-body">
        <div class="row">
          <div class="col-md-12">
            <h4 class="modal-title" id="modal-title"><%= t('exit_without_save') %></h4>
          </div>
        </div>
        <div class="space20"></div>
        <div class="space20"></div>
        <div class="space20"></div>
        <div class="row">
          <div class="col-md-3 pull-right">
            <button class="btn btn-custom btn-gray" data-dismiss="modal"><%= t('cancel') %></button>
          </div>
          <div class="col-md-3 pull-right">
            <button id="force-change-page" class="btn btn-custom btn-green" data-dismiss="modal"><%= t('ok') %></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'search_student_button' %>
