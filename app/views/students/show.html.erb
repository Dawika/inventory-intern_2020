<%- model_class = Student -%>
<div class="container" style="width: 960px;">
  <div class="row head-sp justify-content-between">
    <h1>รายละเอียดนักเรียน</h1>
  </div>
  <div class="content-student-parent-show">
    <div class="row add-st-pr">
      <div class="col-3">
        <b>ชื่อ - นามสกุล : </b>
      </div>
      <div class="col-8">
        <%= @student.full_name %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b>Full name english : </b>
      </div>
      <div class="col-8">
        <%= @student.full_name_english %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b>ชื่อเล่น : </b>
      </div>
      <div class="col-8">
        <%= @student.nickname %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b>Nickname english : </b>
      </div>
      <div class="col-8">
        <%= @student.nickname_english %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b>เพศ : </b>
      </div>
      <div class="col-8">
        <%= @student.gender_id %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b>วัน เดือน ปี เกิด : </b>
      </div>
      <div class="col-8">
        <%= @student.birthdate %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> ระดับชั้น : </b>
      </div>
      <div class="col-8">
        <%= @student.grade_id %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> ชั้น : </b>
      </div>
      <div class="col-8">
        <%= @student.classroom %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> ห้อง : </b>
      </div>
      <div class="col-8">
        <%= @student.classroom_number %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> เลขที่ : </b>
      </div>
      <div class="col-8">
        <%= @student.student_number %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> รหัสบัตรประชาชน : </b>
      </div>
      <div class="col-8">
        <%= @student.national_id %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> หมายเหตุ : </b>
      </div>
      <div class="col-8">
        <%= @student.remark %>
      </div>
    </div>
    <div class="row add-st-pr">
      <div class="col-3">
        <b> ผู้ปกครอง / Parents : </b>
      </div>
      <div class="col-8">
        <% @student.parents.each do |parent| %>
          <dd><%= link_to "#{parent.full_name}", parent_path(parent) %></dd>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-center save-sp">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                    students_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_student_path(@student), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    student_path(@student),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-remove' %>
    </div>
  </div>
</div>
