<div class="content-student-parent">
  <div class="row add-st-pr">
    <table
      id="student-invoice"
      data-toggle="table"
      data-url="/quotations"
      data-query-params="invoiceQueryParams"
      data-response-handle="invoiceResponseHandler"
      data-pagination="true"
      data-page-size="10"
      data-smart-display="true"
      data-side-pagination="client"
      data-sort-name="created_at"
      data-sort-order="desc"
      data-locale="<%= I18n.locale %>">
      <thead>
        <tr>
          <th data-field="id" data-formatter="idFormatter" data-sortable="true"><%= t('buy_slip') %></th>
          <th data-field="student_name" data-sortable="true"><%= t('student_name') %></th>
          <th data-field="grade_name" data-sortable="true"><%= t('level') %></th>
          <th data-field="quotator_name" data-sortable="true"><%= t('receiver') %></th>
          <th data-field="created_at" ><%= t('quotation_printed_at') %></th>
          <th data-field="paid_at" data-formatter="createdAtFormatter" data-sortable="true"><%= t('payment_date') %></th>
          <th data-field="total_amount" ><%= t('paid_amount') %></th>
          <th data-field="outstanding_balance" ><%= t('quotation_outstanding_balance') %></th>
        </tr>
      </thead>
    </table>
  </div>
</div>
