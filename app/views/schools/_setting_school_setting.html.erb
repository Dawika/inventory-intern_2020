<div class="new-school" id="formSchool">
    <h1>
        <%= t('.header') %>
    </h1><br>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h4>
                    <%= t('.Message1') %>
                </h4>
            </div>
            <div class="col-md-6">
                <h4>
                    <%= t('.Message2') %>
                </h4>
            </div>
            <div class="controls content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="xform-group">
                                    <%= f.input :name, label: t('.name_thai'), input_html: { class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.input :name_eng, label: t('.name_eng'), input_html: { class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.input :subdomain_name, label: 'Subdomain name', 
                                    input_html: { onkeyup: "validateUniqueness2('#{subdomain_uniqueness_check_validates_path}', this.id)", class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <br>
                                    <h4>.<%=@domain_name%></h4>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <%= f.simple_fields_for :school_settings, validate: true do |school_setting_form| %>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= school_setting_form.input :school_year, label: t('.school_year'), collection: [Time.now.year + 543, Time.now.year + 544], selected: Time.now.year + 543, input_html: { id: 'school_school_settings_school_year', class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= school_setting_form.input :semesters, label: t('.semesters'), collection: 1..3, selected: 2, input_html: { id: 'school_school_settings_semesters' } %>
                                </div>
                            </div>
                            <% end %>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h4>
                                                <%= t('.Message3') %>&nbsp;
                                                <%= image_tag '/true.png', id: 'img-sc-true', class: 'hide', :size => "30x30" %>
                                                <%= image_tag '/false.png', id: 'img-sc-false', class: 'hide', :size => "30x30" %>
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="dropzone">
                                        <%= image_tag '/icon-file.jpg', id: 'logoSchool', class: 'img-lg' %>
                                    </div><br><br>
                                    <button type="button" class="btn btn-getStarted animated fadeInDown" onclick="$('#school_logo').trigger('click')"><%= t('.Choose_file')%></button>
                                </div>
                                <div id="requireimg" class="invalid-feedback" style="display: show;">*จำเป็นต้องใส่</div>
                                <div id="errorMessage" class="invalid-feedback" style="display: none;"></div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.input :logo, label: false, as: :file, multiple: true, accept:'image/*', input_html: { onChange: 'changeLogo(event, "logoSchool")', class: 'validate-sign-up' }, required: true %>
                                    <br /><br /><br />*File type support .JPEG, .JPG, .PNG Size 200 x 200px under 2MB
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.input :address, label: t('.address'), input_html: { class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.input :phone, label: t('.phone'), as: :integer, input_html: { class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.input :fax, label: t('.fax'), as: :integer %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.input :email, label: t('.email'), input_html: { class: 'validate-sign-up' }, required: true %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <%= f.input :tax_id, label: t('.tax_id'), as: :integer %>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <%= f.input :branch, label: t('.branch'), as: :integer %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <h4>
                                    <%= t('.Message4') %>
                                </h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.input :note, label: t('.note'), input_html: { id: 'user_school_note' } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                </div>
                <div class="col-md-2">
                    <%= button_tag t('.next'), type: 'button', class: 'btn btn-getStarted animated fadeInDown', onclick: 'showNewSchool("grade")', id: 'new_modal', disabled: true %>
                </div>
            </div>
            <div class="row">
              <div class="form-group">
                <h4>
                  <%= t('.Message4') %>
                </h4>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.input :note, label: t('.note'), input_html: { id: 'user_school_note' } %>
                </div>
              </div>
            </div>
            <div class="class_data row">
              <div class="col-md-12">
                <div class="form-group">
                  <label class="class-that"><%= t('.class_that') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="pre-school" name="grades[pre_school]" checked>
                  <label for="pre_school"><%= t('.pre_school') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="kindergarten" name="grades[kindergarten]">
                  <label for="kindergarten"><%= t('.kindergarten') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="primary-school" name="grades[primary_school]">
                  <label for="primary-school"><%= t('.primary_school') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="junior-high-school" name="grades[junior_high_school]">
                  <label for="junior-high-school"><%= t('.junior_high_school') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="senior-high-school" name="grades[senior_high_school]">
                  <label for="senior-high-school"><%= t('.senior_high_school') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="voc_cert" name="grades[voc_cert]">
                  <label for="voc_cert"><%= t('.voc_cert') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="dip_high_voc_cert" name="grades[dip_high_voc_cert]">
                  <label for="dip_high_voc_cert"><%= t('.dip_high_voc_cert') %></label>
                </div>
                <div>
                  <input class="checkbox-orange" type="checkbox" id="other" name="grades[other]">
                  <label for="other"><%= t('.other') %></label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
        </div>
      </div>
      <div class="row">
        <div class="col-md-9">
        </div>
        <div class="col-md-2">
          <%= button_tag t('.next'), type: 'button', class: 'btn btn-getStarted animated fadeInDown', onclick: 'showNewSchool()', id: 'new_modal', disabled: true %>
        </div>
    </div>
</div>