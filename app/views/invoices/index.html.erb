<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Parent</th>
      <th>User</th>
      <th>Remark</th>
      <th>Payment method</th>
      <th>Cheque bank name</th>
      <th>Cheque number</th>
      <th>Cheque date</th>
      <th>Transfer bank name</th>
      <th>Transfer date</th>
      <th>Invoice status</th>
      <th>School year</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.student_id %></td>
        <td><%= invoice.parent_id %></td>
        <td><%= invoice.user_id %></td>
        <td><%= invoice.remark %></td>
        <td><%= invoice.payment_method_id %></td>
        <td><%= invoice.cheque_bank_name %></td>
        <td><%= invoice.cheque_number %></td>
        <td><%= invoice.cheque_date %></td>
        <td><%= invoice.transfer_bank_name %></td>
        <td><%= invoice.transfer_date %></td>
        <td><%= invoice.invoice_status_id %></td>
        <td><%= invoice.school_year %></td>
        <td><%= invoice.semester %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

